# üîê Environment Configuration
# Copy this file to .env and fill in your values

# ======================== OPENAI SETTINGS ========================
# OpenAI API Key (Get it from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-actual-key-here

# OpenAI Model to use
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo-preview

# ======================== BAILEYS BOT (LOCAL) ========================
# Auto-reply delay in milliseconds (how long to wait before bot responds)
# 60000 = 1 minute, 300000 = 5 minutes, 600000 = 10 minutes
AUTO_REPLY_DELAY=300000

# Skip group messages (true/false)
# Set to true if you don't want the bot to reply in group chats
SKIP_GROUPS=false

# Fallback message (used if AI service fails)
FALLBACK_MESSAGE=Hey, I'm a bit busy right now. Will get back to you soon! üëç

# ======================== TWILIO SETTINGS (CLOUD) ========================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio WhatsApp Number (Sandbox)
# Sandbox: whatsapp:+14155238886 (for testing)
# Business: whatsapp:+your-business-number (for production)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Port for Twilio webhook server
PORT=3000
